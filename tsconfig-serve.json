// this file compiles the electron part
{
  "compilerOptions": {
    "outDir": "./dist/electron-out-tsc",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./electron/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
